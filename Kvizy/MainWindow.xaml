<Window x:Class="RandomQuestionGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Question Game">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblQuestion" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnAnswer1" Content="" Width="250" Height="100" Margin="10" Click="CheckAnswer"/>
            <Button x:Name="btnAnswer2" Content="" Width="250" Height="100" Margin="10" Click="CheckAnswer"/>
            <Button x:Name="btnAnswer3" Content="" Width="250" Height="100" Margin="10" Click="CheckAnswer"/>
        </StackPanel>
        <TextBlock x:Name="lblBestScore" HorizontalAlignment="Left" Margin="10" Text="0"/>
    </Grid>
</Window>